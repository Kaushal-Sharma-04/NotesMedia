<% layout("/layouts/boilerplate") %>

    <style>
        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            /* 16:9 Aspect Ratio (divide 9 by 16 = 0.5625) */
            height: 0;
            overflow: hidden;
            max-width: 100%;
            margin: auto;
            margin-bottom: 2rem;

        }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    </style>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto mt-5">
                    <h1>
                        <%= courses.title %>
                    </h1>
                    <div class="video-container">
                        <iframe src="https://www.youtube.com/embed/videoseries?list=<%= courses.videos_id %>"
                            allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>


    </body>