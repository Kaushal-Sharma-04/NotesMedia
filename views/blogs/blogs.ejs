<% layout("/layouts/boilerplate") %>

  <body>
    <!--- blogs section --->
    <section class="our-blogs my-2">
      <h2>Our Blogs</h2>
      <div class="d-flex justify-content-end align-items-center">
        <a href="/blogs/new" class="btn">Write Blog &nbsp;&nbsp;<i class="fa-solid fa-arrow-right"></i></a>
      </div>
      <div class="container">
        <div class="row  gy-3 my-3">
          <% allBlogs.forEach(blog=> { %>
            <div class="col-sm-6 col-md-6 col-lg-3 ">
              <div class="card mb-3">
                <img src="<%= blog.images.length ? blog.images[0].url : '/img/NOIMG.jpg' %>" class="card-img-top"
                  alt="<%= blog.title %>">
                <div class="card-body">
                  <h5 class="card-title">
                    <%= blog.title %>
                  </h5>
                  <p class="card-text">
                    <%= blog.excerpt %>
                  </p>
                  <a href="/blogs/<%= blog._id %>" class="btn btn-outline-secondary">Read More</a>
                </div>
                <small class="text-muted">
                  <%= blog.createdAt.toDateString() %>
                </small>
              </div>
            </div>
            <% }) %>

        </div>
      </div>
    </section>
  </body>