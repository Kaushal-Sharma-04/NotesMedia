<% layout('/layouts/boilerplate') %>

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col">
                <h1 class="mt-4">
                    <%= blog.title %>
                </h1>
                <p class="lead">by <%= blog.author %>
                </p>
                <hr>
                <p>Posted on <%= blog.createdAt.toDateString() %>
                </p>
                <hr>
                <div class="content">
                    <% if (blog.images && blog.images.length> 0) { %>
                        <img src="<%= blog.images[0].url %>" alt="Blog Image" class="img-fluid">
                        <% } %>
                </div>
                <hr>
                <%- blog.content %>
            </div>
        </div>
    </div>