<% layout("/layouts/boilerplate") %>

  <body>
    <!-- banner start  -->

    <div class="container" id="banner">
      <div class="row ">
        <div class="col-12">
          <h2>WELCOME STUDENTS...!</h2>
        </div>
        <div class="col-12">
          <div id="carouselExampleSlidesOnly" class="carousel slide  " data-bs-ride="carousel">
            <div class="carousel-inner" id="m-slider">
              <div class="carousel-item active">
                <img src="./img/Steve-Jobs.jpg" class="d-block w-100 img-fluid" alt="stevejobs">
                <p>“I think money is a wonderful thing because it enables you to do things. It enables you to invest in
                  ideas that don't have a short-term payback..”</p>
                <p class="quotes-credit">~Steve Jobs</p>
              </div>
              <div class="carousel-item">
                <img src="./img/james.webp" class="d-block w-100  img-fluid" alt="james gosling">
                <p>"I think it would be a tragic statement of the universe if Java was the last language that swept
                  through."</p>
                <p class="quotes-credit">~James Gosling</p>
              </div>
              <div class="carousel-item">
                <img src="./img/LarryPage.jpg" class="d-block w-100 img-fluid" alt="larry page">
                <p>“If you’re changing the world, you’re working on important things. You’re excited to get up in the
                  morning.”</p>
                <p class="quotes-credit">~Larry Page</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <!-- banner end  -->

    <!-- Our courses Card Section Start-->

    <section class="our-courses my-2">
      <h2>Our Courses</h2>

      <div class="d-flex justify-content-end align-items-center">
        <a href="/courses" class="btn">More Courses &nbsp;&nbsp;<i class="fa-solid fa-arrow-right"></i></a>
      </div>

      <div class="container">
        <div class="row  gy-3 my-3">
          <% let courseToShow=allCourses.slice(0,4); %>
            <% for(let course of courseToShow){ %>
              <div class="col-sm-6 col-md-6 col-lg-3 ">
                <div class="card card-style">
                  <img src="<%= course.image.url %>" class="card-img-top" alt="<%= course.title %>">
                  <div class="card-body card-body-style">
                    <h5 class="card-title card-title-style">
                      <%= course.title %>
                    </h5>
                    <p class="card-text card-text-style">
                      <%= course.description %>
                    </p>
                    <a href="/courses/<%= course._id %>" class="btn btn-outline-dark">Watch Course</a>
                  </div>
                </div>
              </div>
              <% } %>
        </div>
      </div>
    </section>
    <!-- Our courses Card Section Start-->

    <!-- Our Blogs Section  -->

    <section class="our-blogs my-2">
      <h2>Our Blogs</h2>
      <div class="d-flex justify-content-end align-items-center">
        <a href="/blogs" class="btn">More Blogs &nbsp;&nbsp;<i class="fa-solid fa-arrow-right"></i></a>
      </div>
      <div class="container">
        <div class="row  gy-3 my-3">
          <% let blogsToShow=allBlogs.slice(0,4); %>
            <% blogsToShow.forEach(blog=> { %>
              <div class="col-sm-6 col-md-6 col-lg-3 ">
                <div class=" card-style card mb-3">
                  <img src="<%= blog.images.length ? blog.images[0].url : '/img/NOIMG.jpg' %>" class="card-img-top"
                    alt="<%= blog.title %>">
                  <div class="card-body card-body-style">
                    <h5 class="card-title card-title-style">
                      <%= blog.title %>
                    </h5>
                    <p class="card-text card-text-style">
                      <%= blog.excerpt %>
                    </p>
                    <a href="/blogs/<%= blog._id %>" class="btn btn-outline-secondary">Read More</a>
                  </div>
                  <small class="text-muted">
                    <%= blog.createdAt.toDateString() %>
                  </small>
                </div>
              </div>
              <% }) %>

        </div>
      </div>
    </section>
    <!-- Our Blogs Section End -->

  </body>